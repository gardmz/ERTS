<contentHaul xmlns:a="http://www.appian.com/ae/types/2009">
    <versionUuid>_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133572</versionUuid>
    <rule>
        <name>ERTS2_CreateActivityCDT</name>
        <uuid>f9b7f10b-9d40-4fc6-a786-49165c3509c2_MAKEACTIVITYCDT</uuid>
        <description>Formatting rule that generates the activity history for a particular process [Activity History]</description>
        <parentUuid>c711cbf5-0cef-4490-924c-4bbef98b1359</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>'type!{urn:com:appian:types:ERTS2}ERTS2_Activity'(
  recordId: ri!recordId,
  who: ri!who,
  action: ri!action,
  /* Use a different Details pattern for each type of activity */
  details:if(
    ri!action = #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133189",
    "To: " &amp; #"bed2e622-6da6-4228-8de0-138b7baa05d8_FORMATNAME"(ri!taskAssignee) &amp; char(10) &amp; "Details: " &amp; ri!taskDetails &amp; if(
      isnull(ri!taskDeadline),
      "",
      char(10) &amp; "Deadline: " &amp; ri!taskDeadline
    ),
    if(
      or(ri!action = #"46f44621-ff87-4048-917a-dc9f3c19336f_ACTIONCOMPLETED", ri!action = #"4a9fd405-3137-4b88-b897-d1346aacf28a_ACTIONSKIPPED"),
      "From: " &amp; #"bed2e622-6da6-4228-8de0-138b7baa05d8_FORMATNAME"(ri!taskAssigner) &amp; char(10) &amp; if(isnull(ri!comments), "(No Comments)", "Comments: " &amp; ri!comments),
      if(
        ri!action = #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133185",
        "Message: " &amp; ri!message &amp; if(not(isnull(ri!attachment)), char(10) &amp; "Attachment: " &amp; #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133245"(ri!attachment), ""),
        if(
          or(ri!action = #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133181", ri!action = #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133197"),
          #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133285"(ri!oldCDT, ri!newCDT, #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133369", #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133365", #"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133373") &amp;
            if(
              or(isnull(ri!newDocs), count(ri!newDocs)=0),
              "",
              "Attached Files: " &amp; joinarray(apply(#"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133245", ri!newDocs), ", ") &amp; char(10)
            ) &amp;
            if(or(isnull(ri!deletedDocs), count(ri!deletedDocs)=0),
              "",
              "Deleted Files: " &amp; joinarray(apply(#"_a-0000e51b-e8fb-8000-9bb2-011c48011c48_133245", ri!deletedDocs), ", ")
            ),
          "no activity found"
        )
      )
    )
  ),
  when: now()
)</definition>
